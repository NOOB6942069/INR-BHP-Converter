def get_currency_list():
    return ['USD', 'EUR', 'GBP', 'JPY', 'INR', 'CNY', 'AUD', 'CAD']

def calculate_cost_per_bhp(cost, bhp, units):
    if bhp == 0:
        return "Error: BHP cannot be zero"
    return (cost / bhp) * units

def calculate_vehicle_cost(cost_per_bhp, bhp):
    return cost_per_bhp * bhp

def get_float_input(prompt):
    while True:
        try:
            return float(input(prompt))
        except ValueError:
            print("Please enter a valid number.")

def main():
    print("Vehicle Cost Calculator")
    print("1. Calculate Cost per BHP")
    print("2. Calculate Vehicle Cost")
    choice = input("Enter your choice (1 or 2): ")

    if choice == '1':
        vehicle_type = input("Vehicle Type: ")
        name = input("Name: ")
        make = input("Make: ")
        cost = get_float_input("Cost: ")
        currency = input("Currency: ")
        bhp = get_float_input("BHP: ")
        units = int(input("Units (1, 100, 1000, 10000, 100000): "))

        result = calculate_cost_per_bhp(cost, bhp, units)
        
        if isinstance(result, str):
            print("Error:", result)
        else:
            print(f"The cost per BHP for your {vehicle_type} ({name} {make}) is: {result:.2f} {currency} per {units} units")

    elif choice == '2':
        cost_per_bhp = get_float_input("Cost per BHP: ")
        bhp = get_float_input("BHP: ")
        currency = input("Currency: ")

        result = calculate_vehicle_cost(cost_per_bhp, bhp)
        print(f"The estimated cost of the vehicle is: {result:.2f} {currency}")

    else:
        print("Invalid choice. Please run the program again and select 1 or 2.")

if __name__ == "__main__":
    main()
